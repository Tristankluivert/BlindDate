<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

 <ng.blinddate.blinddate.Fonts.FontMont
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="20dp"
     android:text="Personality Question"
     android:textSize="18sp"
     android:textColor="@color/text1"
     />

    <ng.blinddate.blinddate.Fonts.FontMont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="18sp"
        android:text="How long was your last relationship?"
        android:textColor="@color/text1"
        />


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/quesrect"
        >

        <ng.blinddate.blinddate.Fonts.FontRobo
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text1"
            android:layout_marginTop="85dp"
            android:text="Select"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="75dp"
            android:backgroundTint="@color/text1"
            ></Spinner>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="100dp"
            android:background="@color/text1"
            />

    </RelativeLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/buttonwhite"
        android:textColor="@color/text1"
        android:text="Skip"

        />

    <Button
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buttonblue"
        android:textColor="@color/white"
        android:text="Next"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/viewpagedesign"
        ></RelativeLayout>


</RelativeLayout>