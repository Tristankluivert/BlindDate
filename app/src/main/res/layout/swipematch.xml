<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:src="@drawable/mypic"
     android:scaleType="centerCrop"
     />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        >
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/bludot"
       android:layout_marginBottom="10dp"
        />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bludot"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bludot"

            />

    </LinearLayout>


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="120dp"
     android:background="@color/black1"
     >
  <ng.blinddate.blinddate.Fonts.FontAveM
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:layout_marginStart="20dp"
      android:text="Lucy,"
      android:textSize="30sp"
      />

  <ng.blinddate.blinddate.Fonts.FontAveM
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:layout_marginStart="100dp"
      android:text="20"
      android:textSize="30sp"
      />

  <ng.blinddate.blinddate.Fonts.FontAveB
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:layout_marginStart="20dp"
      android:text="60% Match"
      android:layout_marginTop="50dp"
      android:textSize="25sp"
      />

  <ImageView
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/info_outline"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="25dp"
      android:layout_marginEnd="30dp"
      />



 </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bluecircle"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/star"

            />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bluecircle"
    android:layout_marginBottom="30dp"
    android:layout_centerHorizontal="true"
    >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/heartout"
        android:layout_centerInParent="true"
        />

</RelativeLayout>



    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bluecircle"
        android:layout_marginBottom="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/couplehearts"
            />
    </RelativeLayout>






</RelativeLayout>